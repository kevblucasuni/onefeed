<!DOCTYPE html>
<html>
<head>
  <title>Onefeed</title>
  <%= stylesheet_link_tag 'application', media: 'all' %>
  <%= javascript_include_tag 'application' %>
  <%= csrf_meta_tags %>
  <%= favicon_link_tag 'favicon.ico' %>
</head>
<body>
<header>
  <nav>
    <%= link_to image_tag("one_feed_logo.png", class: "site-logo"), root_path %>
    <div class="main-nav-container">
      <%= link_to "Login", new_session_path, class: "main-nav-link" %>
    </div>
  </nav>
</header>
<div class="homepage-wrapper">
  <div class="homepage-background-fade">
    <main>
      <%= yield %>
    </main>
  </div>
</div>
</body>
</html>
